<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <TextView
        android:id="@+id/Reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fff200"
        android:text="@string/reminder"
        android:gravity="bottom"
        android:textSize="15dip" />

    <!--流式布局二-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="3"
        android:background="#d6e6f2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Broadcast"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/frame1"
            android:gravity="center"
            android:text="@string/Broadcast"
            android:textSize="10dp"
            android:textColor="#303481"/>

        <Button
            android:id="@+id/CloseBT"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/frame2"
            android:gravity="center"
            android:onClick="CloseBlueTooth"
            android:text="@string/close"
            android:textSize="10dp"
            android:textColor="#303481"/>

        <Button
            android:id="@+id/OpenBT"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/frame3"
            android:gravity="center"
            android:onClick="OpenBlueTooth"
            android:text="@string/open"
            android:textSize="10dp"
            android:textColor="#303481"/>

        <Button
            android:id="@+id/DiscoveryBT"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/frame4"
            android:gravity="center"
            android:text="@string/discovery"
            android:textSize="10dp"
            android:textColor="#303481"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/divide"
        android:gravity="center"
        android:background="#f5f5f5"
        android:textColor="#303481"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="12"
        android:background="#d6e6f2"/>

    <!--    <TextView
            android:id="@+id/receive"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/frame2"
            android:textSize="15dp"/>-->

    <TextView
        android:id="@+id/receive"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="12"
        android:background="@drawable/frame2"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/send"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:background="@drawable/frame3" />

        <Button
            android:id="@+id/button_send"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/frame5"
            android:text="发送"
            android:textColor="#f5f5f5"
            android:textSize="20dp" />

        <Switch
            android:id="@+id/kaiguan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="15dp"
            android:checked="false"
            android:showText="true"
            android:textSize="26dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track" />
    </LinearLayout>

</LinearLayout>



